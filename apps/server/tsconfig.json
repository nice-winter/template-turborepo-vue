{
  "extends": "tsconfig/base.json",

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "paths": { "@/*": ["src/*"] }
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
